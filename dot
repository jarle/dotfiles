#!/usr/bin/env bash

# Change to dir of script
cd "$(dirname "$0")"

# Useful variables
BASEDIR="$(pwd)"
VUNDLEDIR="$HOME/.vim/bundle/Vundle.vim"
OHMYZSHDIR="$HOME/.oh-my-zsh"
TERMINALFONT="$HOME/.local/share/fonts/Droid Sans Mono for Powerline.otf"
APPLICATIONS="git curl build-essential vim gnome-terminal zsh"
BACKUPDIR="$BASEDIR/.backup"

printf "Starting installation\n\n"
sudo -v
rm -rf $BACKUPDIR
mkdir -p $BACKUPDIR

# Install main applications
printf "Installing main applications...\n"
sudo apt-get install -qy $APPLICATIONS > /dev/null

printf "Configuring environment...\n"
# Set gnome terminal as default terminal
sudo update-alternatives --set x-terminal-emulator /usr/bin/gnome-terminal.wrapper	

# Download and install different tools from git
git config --global core.excludesfile "$HOME/.gitignore"
git submodule init
git submodule update

if ! type vimpager 1>/dev/null; then
	cd vim/vimpager
	sudo make -f Makefile install-deb 1>/dev/null
	cd ../..
	rm -f vim/vimpager_*
fi

if [ ! -d $VUNDLEDIR ]; then
	git clone https://github.com/VundleVim/Vundle.vim.git $VUNDLEDIR 
fi

if [ ! -d $OHMYZSHDIR ]; then
	mkdir -p $OHMYZSHDIR
	git clone git://github.com/robbyrussell/oh-my-zsh.git $OHMYZSHDIR
	chsh -s /bin/zsh
fi

if [ ! -d "$OHMYZSHDIR/custom/plugins/zsh-syntax-highlighting" ]; then
	git clone https://github.com/zsh-users/zsh-syntax-highlighting.git $OHMYZSHDIR/custom/plugins/zsh-syntax-highlighting
fi

printf "Installing fonts...\n"
if [ ! -f "$TERMINALFONT" ]; then
	source fonts/install.sh 
fi

printf "Setting up symlinks...\n"

cp -as "$BASEDIR/vim/colors/" "$HOME/.vim/" &>/dev/null
cp -as "$BASEDIR/zsh/themes" "$ZSH_CUSTOM" &>/dev/null

for file in */*.symlink; do
	filename="$HOME/.$(basename $file .symlink)"
	# create backup if the file already exists
	if [ -f $filename ]; then
		mv $filename $BACKUPDIR
	fi
	ln $file "$filename"
done

printf "Done!\n"
printf "Old files has been put in $BACKUPDIR\n"
